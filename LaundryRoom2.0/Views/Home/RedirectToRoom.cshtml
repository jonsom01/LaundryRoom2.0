@{
    Layout = "_Layout";
}

@model LaundryRoom20.Models.Helper
<body>
    <link href="~/css/forms.css" rel="stylesheet" />
    <div id="main" class="container">
        <h2>Välj din tvättstuga:</h2>
        <form asp-action="Redirect">
            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Bostadsrättsförening</label>
                    <div class="col-md-10">
                        <select asp-for="Location" class="form-control">
                            @for (int i = 0; i < Model.Locations.Count; i++)
        {
                    <option>@Html.DisplayFor(model => model.Locations[i])</option>
}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ta mig dit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
