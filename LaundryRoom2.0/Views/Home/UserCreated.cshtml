@{
    Layout = "_Layout";
}

@model LaundryRoom20.Models.User
<body>
    <link href="~/css/forms.css" rel="stylesheet" />
    <div id="main" class="container">
        <h2>En ny användare har skapats</h2>
        <hr />
        <h3>Pin-koden för @Html.DisplayFor(model => model.Name) är: @Html.DisplayFor(model => model.Password)</h3>
        <form action="https://bokatvattstugan.online/home/usercreate?location=@Html.DisplayFor(model => model.Location)" method="post">    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10"> 
                    <input type="submit" value="Skapa en till" class="btn btn-default" />  
                </div>
            </div>
        </form>
    </div>
</body>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}